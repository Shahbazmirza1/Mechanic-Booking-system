    <video class="bg-vid" src="/images/vid.mp4" autoplay loop muted plays-inline></video>
    <div class="container">
        <div class="row bar">
            <div class="col-lg-4">
                <div id="glass" class="side d-flex flex-column flex-shrink-0 p-3" style="width: 280px;">
                    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                        <span class="fs-4 link-light">ADMIN</span>
                      </a>
                      <hr>
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item">
                            <a href="/admin" class="nav-link link-light" aria-current="page">
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="/orders" class="nav-link link-light">Appointments</a>
                        </li>
                        <li>
                            <a href="/Service" class="nav-link link-light">Services</a>
                        </li>
                        <li>
                            <a href="/mechanic" class="nav-link link-light">Mechanics</a>
                        </li>
                        <li>
                            <a href="/customers" class="nav-link link-light">Customers</a>
                        </li>
                    </ul>
                    <hr>
                </div>
            </div>
            <div id="glass1" class="col-lg-8 text-white">
                <section class="section dashboard">
                    <h1>CUSTOMERS</h1>
                    <table>
                        <thead>
                            <tr>
                                <th>Customer ID</th>
                                <th>Customer Name</th>
                                <th>Car model</th>
                                <th>Notes by Customers</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% customers.forEach((customer)=> { %>
                                <tr>
                                    <td>
                                        <%= customer.id %>
                                    </td>
                                    <td>
                                        <%= customer.name %>
                                    </td>
                                    <td>
                                        <%= customer.car_model %>
                                    </td>
                                    <td>
                                        <%= customer.notes %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </div>
