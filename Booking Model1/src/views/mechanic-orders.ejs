<body class="order">
    <!-- <video class="bg-vid" src="../../public/images/vid.mp4" autoplay loop muted plays-inline></video> -->
    <video class="bg-vid" src="/images/vid.mp4" autoplay loop muted plays-inline></video>
    <div class="container">
        <div class="row bar">
            <div class="col-lg-4">
                <div id="glass3" class="side d-flex flex-column flex-shrink-0 p-3" style="width: 280px;">
                    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                        <span class="fs-4 link-light">Mechanic</span>
                      </a>
                      <hr>
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item">
                            <a href="/mechanic-home" class="nav-link link-light" aria-current="page">
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="/mechanic-orderss" class="nav-link link-light">Appointments</a>   
                        </li>
                    </ul>
                    <hr>
                </div>
            </div>
            
            <div class="col-lg-8">
                <section class="section dashboard">
                    <h1 class="text-white">Appointments</h1>

                    <div class="search-form">
                      <form id="searchForm" action="/search-appointments" method="get">
                          <input type="text" name="mechanic_id" placeholder="Enter Mechanic ID" required>
                          <button type="submit" class="btn btn-primary">Search</button>
                      </form>
                  </div>
          
                     <table class="table table-striped">
                        <thead>
                                    <tr>
                                        <th>Booking ID</th>
                                        <th>Customer Name</th>
                                        <th>Appointment Date</th>
                                        <th>Appointment Time</th>
                                       
                                     </tr>
                                </thead>
                                <tbody> 
                                  <% orders.forEach((order) => { %>
                                        <tr>
                                            <td><%= order.id %></td>
                                            <td><%= order.owner_name %></td>
                                            <td><%= new Date(order.appointment_date).toLocaleDateString() %></td>
                                            <td><%= new Date(order.appointment_date).toLocaleTimeString() %></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                    </table>       
                </section>
            </div>
</body>
